<%= render 'shared/page_title', title: 'Create a New Ingredient' %>

<%= render 'shared/errors', obj: @ingredient %>

<div class = "row">
  <div class = "well col-md-8 col-md-offset-2 blend-blue">
    <%= form_for @ingredient do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

     <%= f.submit 'Create New Ingredient', class: 'btn btn-default gradient btn-lg' %>
     <% end %>
  </div>
</div>
